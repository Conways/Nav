<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue">


    <EditText
        android:id="@+id/activity_login_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="8dp"
        android:hint="用户名"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toTopOf="@id/activity_login_psd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/activity_login_psd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="密码"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toTopOf="@id/activity_login_login"
        app:layout_constraintEnd_toEndOf="@id/activity_login_name"
        app:layout_constraintStart_toStartOf="@id/activity_login_name"
        app:layout_constraintTop_toBottomOf="@id/activity_login_name"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/activity_login_icon_name"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_login_name"
        app:layout_constraintBottom_toBottomOf="@id/activity_login_name"
        app:layout_constraintStart_toStartOf="@id/activity_login_name" />

    <ImageView
        android:id="@+id/activity_login_icon_psd"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_login_psd"
        app:layout_constraintBottom_toBottomOf="@id/activity_login_psd"
        app:layout_constraintStart_toStartOf="@id/activity_login_psd" />

    <TextView
        android:id="@+id/activity_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_round_stroken_white"
        android:paddingHorizontal="40dp"
        android:paddingVertical="4dp"
        android:text="login"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/activity_login_psd"
        app:layout_constraintStart_toStartOf="@id/activity_login_psd"
        app:layout_constraintTop_toBottomOf="@id/activity_login_psd"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>